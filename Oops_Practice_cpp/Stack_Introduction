#include<iostream>
#include<stack>
using namespace std;
int main()
{
    //Creating a stack:
    stack<int>s;
    //Inserting elements into stack:push()
    s.push(10);
    s.push(20);
    s.push(30);
    s.push(40);
     //Topmost element in stack:
    cout<<"Topmost elements in stack:"<<s.top()<<endl;
    //removing elements from stack:pop()(LIFO)
    s.pop();
    //Topmost element in stack:
    cout<<"Topmost elements in stack:"<<s.top()<<endl;

}