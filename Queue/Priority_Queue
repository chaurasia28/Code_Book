#include<iostream>
#include<queue>
using namespace std;
int main()
{
    priority_queue<int>max_heap;
    max_heap.push(9);
    max_heap.push(8);
    max_heap.push(10);
    max_heap.push(2);
    cout<<"Topmost Element in heap:"<<max_heap.top()<<endl;
    cout<<"Size of max_heap:"<<max_heap.size()<<endl;
    max_heap.pop();
    cout<<"Topmost Element in heap:"<<max_heap.top()<<endl;
    cout<<"Size of max_heap:"<<max_heap.size()<<endl;
    if(max_heap.empty())
    {
        cout<<"Heap is empty"<<endl;
    }
    else
    {
        cout<<"Heap is not empty"<<endl;
    }
    priority_queue<int,vector<int>,greater<int>>min_heap;
    min_heap.push(9);
    min_heap.push(8);
    min_heap.push(10);
    min_heap.push(2);
    cout<<"Topmost Element in heap:"<<min_heap.top()<<endl;
    cout<<"Size of min_heap:"<<min_heap.size()<<endl;
    min_heap.pop();
    cout<<"Topmost Element in heap:"<<min_heap.top()<<endl;
    cout<<"Size of min_heap:"<<min_heap.size()<<endl;
    if(max_heap.empty())
    {
        cout<<"Heap is empty"<<endl;
    }
    else
    {
        cout<<"Heap is not empty"<<endl;
    }
    
}